<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bc"
    android:elevation="1dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/pri_title"
        android:text="模式："
        android:textColor="#6D6A6A"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_below="@id/pri_title"
        android:layout_marginTop="10dp"
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textColor="#6D6A6A"
        android:id="@+id/mode"
        android:layout_toRightOf="@id/pri_title"
        android:text="请切换任意模式"
        android:layout_alignBottom="@id/pri_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="51dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageButton
                android:backgroundTintMode="multiply"
                android:id="@+id/battery_button"
                android:stateListAnimator="@drawable/selector_elevation"
                android:backgroundTint="@color/colorBattery"
                android:src="@mipmap/battery_tile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/corner_selector"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/balance_button"
                android:backgroundTint="@color/colorBalance"
                android:backgroundTintMode="multiply"
                android:src="@mipmap/balance_tile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/corner_selector"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageButton
                android:backgroundTintMode="multiply"
                android:id="@+id/performance_button"
                android:stateListAnimator="@drawable/selector_elevation"
                android:backgroundTint="@color/colorPerformance"
                android:src="@mipmap/performance_tile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/corner_selector"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageButton
                android:backgroundTintMode="multiply"
                android:id="@+id/turbo_button"
                android:backgroundTint="@color/colorTurbo"
                android:src="@mipmap/turbo_tile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/corner_selector"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

